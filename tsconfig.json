{
    "compilerOptions": {
        "target": "es2016",//配置编译目标代码的版本标准
        "module": "es6",//配置编译目标使用的模块标准
        "lib": ["es2016"],
        "outDir": "./dist",
        "strictNullChecks": true,
        "noEmitOnError": true, //错误时不生成编译结果
        "moduleResolution": "node", //模块解析策略 node classic
        "removeComments": true,// 编译结果移除注释
        "esModuleInterop": true,//启用es模块化交互非es模块导出
        "noImplicitUseStrict": true,//编译结果中不包含"use strict"
    },
    "include": ["./src", "index.ts"]
}  